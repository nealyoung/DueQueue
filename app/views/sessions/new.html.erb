<% content_for :title do %>Login<% end %>

<%= form_tag validate_user_path do %>
  <%= label_tag :email %>
  <%= text_field_tag :email, params[:email] %>

  <%= label_tag :password %>
  <%= password_field_tag :password %>

  <%= submit_tag "Log In", :class => 'btn btn-inverse' %>
  <%= link_to "Sign Up", sign_up_path, :class => 'pull-right' %>
<% end %>
