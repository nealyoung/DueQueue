<% content_for :title do %>Sign Up<% end %>

<% if @user.errors.any? %>
  <div class="alert">
    <h4>Invalid data</h4>
    <% @user.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  </div>
<% end %>

<h1>Sign Up</h1>

<%= form_for @user, :url => 'create_user' do |f| %>
  <%= f.label :email %>
  <%= f.text_field :email %>
  
  <%= f.label :first_name %>
  <%= f.text_field :first_name %>
  
  <%= f.label :last_name %>
  <%= f.text_field :last_name %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
  
  <%= f.submit :class => 'btn btn-inverse' %>
 <% end %>
